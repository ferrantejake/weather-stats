{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "target": "ES6"
    },
    "filesGlob": [
        "typings/index.d.ts",
        "app/**/*.ts"
    ],
    "atom": {
        "rewriteTsconfig": false
    },
    "compileOnSave": false,
    "exclude": [
        "node_modules"
    ]
}